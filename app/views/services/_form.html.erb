<%= render 'layouts/errors', active_object: @service %>

<div class="container">
  <%= bootstrap_form_with(model: service, local: true) do |form| %>

      <%= form.text_field :name %>
      <%= form.cktext_area :description, ckeditor: { language: 'en'} %>
      <%= form.collection_check_boxes :request_ids, Request.all, :id, :name, label: "Request types" %>
      <%= form.submit %>
  <% end %>
</div>
