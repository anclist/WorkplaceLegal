  <% if active_object.errors.any? %>
  <div class="modal" id="errorsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog alert alert-danger" role="document alert">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= pluralize(active_object.errors.count, "error") %> prohibited this record from being saved:</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <ul>
          <% active_object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <script type="text/javascript">
    $(window).on('load',function(){
        $('#errorsModal').modal('show');
    });
</script>
