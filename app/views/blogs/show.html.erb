<div class="container">

  <div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-10">

      <!-- Title -->
      <h1 class="mt-4"><%= @blog.title %></h1>

      <!-- Author -->
      <p class="lead">
        by
        <%= mail_to(@blog.user.email) %>
      </p>

      <hr>

      <!-- Date/Time -->
      <p><strong>Posted on</strong> <%= @blog.created_at.strftime("%B %-d, %Y at %-l:%M %p") %></p>
      <p><strong>Updated at</strong> <%= @blog.updated_at.strftime("%B %-d, %Y at %-l:%M %p") %></p>


      <hr>

      <!-- Tags -->
      <h3 class="mt-4">Services</h1>
      <p>
        <% @blog.services.each do |service| %>
          | <%= link_to service.name, service_path(service) %>
        <% end %>
        <br>
      </p>

      <hr>


      <!-- Preview Image -->
      <img class="img-fluid rounded" src="<%= @blog.picture.url %>" alt="">

      <hr>

      <!-- Post Content -->
      <p class="lead"><%= @blog.content %></p>

      <hr>

