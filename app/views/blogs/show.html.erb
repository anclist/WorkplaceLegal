<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-10 post-content">
      <!-- Title -->
      <h1 class="mt-4"><%= @blog.title %></h1>
      <!-- Author -->
      <p class="lead">
        by <%= mail_to(@blog.user.email) %>
      </p>
        <hr>
      <!-- Tags -->
      <h3 class="mt-4">Related services</h3>
      <p>
        <% @blog.services.each do |service| %>
          <span class="badge badge-primary" id="service_links"><%= link_to service.name, service_path(service) %></span>
        <% end %>
        <br>
      </p>
        <hr>
      <!-- Preview Image -->
      <img class="img-fluid rounded" src="<%= @blog.picture.url %>" alt="">
        <hr>
      <!-- Post Content -->
      <p class="lead"><%= @blog.content.html_safe %></p>
      <hr>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_blog_path(@blog) %> |
      <% else %>
      <% end %>
      <%= link_to 'Show all Blog Posts', blogs_path %>
    </div>
  </div>
</div>
