<!-- Header -->
<div class="jumbotron jumbobackground mb-0" id="espanol_bg"">
  <div class="text-white text-center py-5 px-4 my-5">
    <div>
      <h2 class="card-title h1-responsive pt-3 mb-5 font-bold"><strong>Ofrecemos Servicios en Espa√±ol</strong></h2>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ContactForm">
        Contactenos!
      </button>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ContactForm" tabindex="-1" role="dialog" aria-labelledby="ContactFormLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ContactFormLabel">Contactenos</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', lead: @lead %>
      </div>
    </div>
  </div>
</div>
